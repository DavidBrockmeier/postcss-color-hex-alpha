  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/postcss/postcss-color-hex-alpha.git"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "index.js"
  ],
  "dependencies": {
    "color": "^0.7.1"
  },
  "devDependencies": {
    "jscs": "^1.6.2",
    "jshint": "^2.5.6",
